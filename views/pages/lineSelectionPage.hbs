<div class='tab-panel' id='panel-2'>
  <div class=''>
    <h1 class='text-center p-1'>Route Selection</h1>

    {{! corridor }}
    <div class='row d-none' id='corridor-selection'>
      <div class='col-12 cursor-pointer bg-lightgrey m-b-1rem'>
        <h1 class='border-transparent p-rl-1 text-ellipsis'>
          Corridor - 3
          <span class='float-right'> > </span>
        </h1>
      </div>
      <div class='col-12 cursor-pointer bg-lightgrey m-b-1rem'>
        <h1 class='border-transparent p-rl-1 text-ellipsis'>
          Corridor - 4
          <span class='float-right'> > </span>
        </h1>
      </div>
      <div class='col-12 cursor-pointer bg-lightgrey m-b-1rem'>
        <h1 class='border-transparent p-rl-1 text-ellipsis'>
          Corridor - 5
          <span class='float-right'> > </span>
        </h1>
      </div>
    </div>
    {{! end corridor }}

    {{! Route status }}
    {{#if lineSelection}}
    <div class='d-flex-column-center bg-lightblack-card ptb-40'>
      <div class='row align-center'>
        {{!-- Train ID --}}
        <div class='col-4'>
          <h1 class='text-right dark-grey f-28'>TrainID:</h1>
        </div>
        <div class='col-8'>
          <input type="text" name="trainID" id="trainID" class="custom-select mx-2 font-bold f-28"
            placeholder="Enter 4-digit TrainID" maxlength="4" autocomplete="off" {{#if isMissionActive}}disabled{{/if}} 
            value="" data-missionSelect="{{LMT_OP_TRAIN_NUMBER}}"
            />
          
        </div>
        {{!-- End Train ID --}}

        {{!-- Line ID --}}
        <div class='col-4'>
          <h1 class='text-right dark-grey f-28'>Line ID:</h1>
        </div>
        <div class='col-8'>
          <select class='custom-select mx-2 font-bold f-28' name='lineID' id='lineID' {{#if isMissionActive}}disabled{{/if}}>
            <option data-missionSelect="{{LMT_OP_LINE_ID}}" value="" disabled selected>Select an option</option>
            {{#each lineSelection}}
            <option value='{{this.lineId}}'>Corridor-{{this.lineId}}</option>
            {{/each}}
          </select>
        </div>
        {{!-- End Line ID --}}
        {{!-- Start Station --}}
        <div class='col-4'>
          <h1 class='text-right dark-grey f-28'>Start Station:</h1>
        </div>
        <div class='col-8'>
          <select class='custom-select mx-2 font-bold f-28' name='startStation' id='startStation'
            {{#if isMissionActive}}disabled{{/if}}>
            <option data-missionSelect="{{LMT_OP_ORIGIN_STATION_NAME}}" value="" disabled selected>Select an option</option>
          </select>
        </div>
        {{!-- End Start Station --}}

        {{!-- Current Station --}}
        <div class='col-4'>
          <h1 class='text-right dark-grey f-28'>Current Station:</h1>
        </div>
        <div class='col-8'>
          <select class='custom-select mx-2 font-bold f-28' name='currentStation' id='currentStation' disabled>
            <option data-missionSelect="{{LMT_OP_CURRENT_STATION_NAME}}" value="" disabled selected>Select an option</option>
          </select>
        </div>
        {{!-- End Current Station --}}

        {{!-- Destination Station --}}
        <div class='col-4'>
          <h1 class='text-right dark-grey f-28'>Destination Station:</h1>
        </div>
        <div class='col-8'>
          <select class='custom-select mx-2 font-bold f-28' name='destinationStation' id='destinationStation'
            {{#if isMissionActive}}disabled{{/if}}>
            <option data-missionSelect="{{LMT_OP_DESTINATION_STATION_NAME}}" value="" disabled selected>Select an option</option>
          </select>
        </div>
        {{!-- End Destination Station --}}
      </div>
    </div>


    {{>virtualKeyboard}}

    <div class='d-flex-wrap-center pt-2'>
      <button class='default-btn' id='startAndStopMission'>
        {{isMissionState isMissionActive}} </button>
    </div>

    <div role="alert" class="f-24 text-center font-bold alert m-tb-12" id="statusAlert">
    </div>

    {{else}}
    <div class='d-flex-column-center bg-lightblack-card ptb-40'>
      <div class='row align-center'>
        <div class="text-center text-dark">
          <h1 class="text-red"> Unable to fetch the Line List Information</h1>
          <h3 class="text-white"><strong> 500 - Internal Server Error - Please check LMT SERVER. </strong></h3>
        </div>
      </div>
    </div>
    {{/if}}

  </div>
</div>